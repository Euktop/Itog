<Window x:Class="Itog2.Windows.IssueReturnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Itog2.Windows"
        mc:Ignorable="d"
        Title="IssueReturnWindow" Height="350" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Номер билета:" Margin="5"/>
            <TextBox Name="txtReaderId" Margin="5"/>
            <Label Content="Номер книги:" Margin="5"/>
            <TextBox Name="txtBookId" Margin="5"/>
            <Label Content="ISBN:" Margin="5"/>
            <TextBox Name="txtISBN" Margin="5"/>
            <Label Content="Номер сотрудника:" Margin="5"/>
            <TextBox Name="txtEmployeeId" Margin="5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <Button Content="Сохранить" IsDefault="True" Click="ButtonSave_Click" Margin="5,0"/>
                <Button Content="Отмена" IsCancel="True" Margin="5,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
